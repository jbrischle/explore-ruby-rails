<h1><%= @account.title %></h1>

<p><%= @account.bankName %></p>
<p><%= @account.iban %></p>

<ul>
  <li><%= link_to "Edit", edit_account_path(@account) %></li>
  <li><%= link_to "Destroy", account_path(@account), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
</ul>

<h2>Transaction</h2>
<%= render @account.transactions %>

<h2>Add a transaction:</h2>
<%= render 'transactions/form' %>

